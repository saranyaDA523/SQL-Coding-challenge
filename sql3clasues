To create Ecommerce
Create Database Ecommerce;
Use Ecommerce;

  1.ORDER BY & LIMIT
  CREATE TABLE Ecommerce 
  SELECT product_id,  product_name, price
  FROM products
  ORDER BY price DESC
  LIMIT 3;

 SELECT TOP3 product_id, product_name, price
 FROM Products
 ORDER BY price DESC;

2.Aggregate function
  SELECT
      COUNT(*) AS total_sales,
      SUM(sale_amount) AS total_sales_amount,
      AVG(sale_amount) AS  average_sale_amount,
      MAX(sale_amount) AS  highest_sale_amount,
      MIN(sale_amount) AS  lowest_sale_amount
      FROM Sales;
      
    3.Group by & Having  
    SELECT
      p.product_id,
      p.product_name,
      SUM(s.sale_amount) AS total_sales_amount
	FROM Sales s
     JOIN Products p ON s.product_id = p.product
     GROUP BY p.product_id, p.product_name
     HAVING SUM(s.sale_amount) >100;
     
     4.windows functions
       SELECT
           product_id,
           product_name,
           price,
           RANK() OVER (ORDER BY price DESC) AS price_rank
		FROM Products;
        
        SELECT
          product_id,
          price_name,
          price,
          DENSE_RANK() OVER (ORDER BY price DESC)
          FROM Products;
